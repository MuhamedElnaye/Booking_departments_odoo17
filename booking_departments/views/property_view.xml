<odoo>
    <!--####################    Tree Or List  View  ####################################-->
    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">Property Tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <tree class="header_custom" decoration-danger="(is_late)" multi_edit="1" create="1" edit="1" delete="1">
                <header>
                    <button name="property_xlsx_report" type="object" string="Print Excel Report"
                            class="btn-primary"/>
                    <!-- name="property_xlsx_report" =>Method name that will do action Found in "property.py" File  -->
                </header>

                <field name="is_late" invisible='1' optional="1"/>
                <field name="name"/>
                <field name="postcode"/>
                <field name="owner_id"/>
                <field name="garage"/>
                <field name="state"/>
                <field name="garden_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="active" optional="1"/>
                <field name="Living_area" optional="1"/>
                <field name="bedrooms" optional="1"/>
            </tree>
        </field>
    </record>

    <!--####################    Form View  ####################################-->
    <record id="property_view_form" model="ir.ui.view">
        <field name="name">Property Form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="1">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <!-- name="button_box" =>Static name to dealing with smart button
                             class="oe_button_box" =>class From Bootstrap -->
                        <button name="action_open_related_owner" type="object" icon="fa-user"
                                string="Owner" invisible="not owner_id"/>
                        <!-- 'action_open_related_owner' =>Method that Found in 'property.py' file
                             'icon="fa-user"'=> icon found in bootstrap calling 'fa-user'
                             'string="Owner"' =>the name That Will Show For End User
                             'invisible="not owner_id"'=>meaning غير مرئ في حالة ليس الكود الخاص بالمالك
                                'owner_id'=>this Field Found in 'property.py' file
                                                -->
                    </div>
                    <widget name="web_ribbon" title="Archive" bg_color="text-bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Sold" bg_color="text-bg-success" invisible="state!='sold'"/>
                    <!-- name="web_ribbon" =>For Calling ribbon shap
                         title="Archive" =>the Title that will show on ribbon
                         bg_color="text-bg-danger" =>color Of Ribbon
                         invisible="active" =>meaning the condition for this show this ribbon
                           must record be archived -->
                    <header>
                        <button name="action" type="object" class="btn-primary" string="Action"/>
                        <button name="get_properties" type="object" class="btn-primary"
                                string="Test Call Get Properties"/>
                        <button name="action_draft" type="object" class="btn-primary" string="Set To Draft"
                                invisible="state in ('draft','closed')"/>
                        <button name="action_pending" type="object" class="btn-secondary" string="Pending"
                                invisible="state != 'draft'"/>
                        <button name="action_sold" type="object" class="btn-success" string="Sold"
                                invisible="state !='pending'"/>
                        <!--                         <field name="state" widget="statusbar" statusbar_visible="draft,sold"/>-->
                        <!--                         <field name="state" widget="statusbar" options="{'clickable':1}"/>-->
                        <field name="state" widget="statusbar"/>
                    </header>
                    <!-- class="oe_title"  this a Class From Bootstrap             -->
                    <div class="oe_title">
                        <label for="ref"/>
                        <h1>
                            <field name="ref" readonly="state !='draft'"/>
                        </h1>
                        <label for="name"/>
                        <h3>
                            <field name="name" readonly="state == 'closed'"/>
                        </h3>
                    </div>
                    <group>
                        <!--string="General_Info. this is Name Of Group             -->
                        <group string="General_Info.">
                            <field name="create_time" readonly="1"/>
                            <field name="next_time" readonly="1"/>
                            <field name="postcode" readonly="state == 'closed'"/>
                            <field name="data_availability" required="1" readonly="state == 'closed'"/>
                            <field name="expected_selling_date" readonly="state == 'closed'"/>
                            <field name="is_late" readonly="state == 'closed'"/>
                            <field name="expected_price" readonly="state == 'closed'"/>
                            <field name="selling_price" readonly="state == 'closed'"/>
                            <field name="diff" readonly="state == 'closed'"/>
                            <field name="Living_area" readonly="state == 'closed'"/>
                        </group>

                        <group string="Additional_Info.">
                            <field name="owner_id" readonly="state == 'closed'"/>
                            <field name="owner_address" readonly="state == 'closed'"/>
                            <field name="owner_phone" readonly="state == 'closed'"/>
                            <field name="bedrooms" readonly="state == 'closed'"/>
                            <field name="garage" readonly="state == 'closed'"/>
                            <field name="garden_area" readonly="state == 'closed'"/>
                            <field name="grand_orientation" readonly="state == 'closed'"/>
                            <field name="active" readonly="state == 'closed'"/>
                            <field name="tag_ids" widget="many2many_tags" readonly="state == 'closed'"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" required="1" groups="app_one.property_manager_group"/>
                    </group>
                    <notebook>
                        <page string="Bedrooms">
                            <field name="line_ids" readonly="state == 'closed'">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="area"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>

    </record>

