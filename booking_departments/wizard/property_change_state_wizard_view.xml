<odoo>
    <!--####################    Form View  ####################################-->
    <record id="property_change_state_wizard_view_form" model="ir.ui.view">
        <field name="name">Change State</field>
        <field name="model">change.state</field>
        <field name="arch" type="xml">
            <form create="1" edit="1" delete="1">
                <group>
                        <field name="property_id" invisible="1"/>
                        <field name="state" />
                        <field name="reason" required="1"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" />
                    <!--name="action_confirm"  =>method name that found in "property_change_state_wizard.py"file   -->
                    <button string="Cancel" spcial="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>

    </record>
    <!--####################    Action View  ####################################-->
    <record id="property_change_state_wizard_action" model="ir.actions.act_window">
        <field name="name">Change State</field>
        <field name="res_model">change.state</field>
        <field name="target">new</field>
        <!--<field name="target">new</field> #Using to show bubbles  فقاعات For wizard window-->
        <field name="view_mode">form</field>
        <!--<field name="view_mode">form</field> => the default value 'Tree' that show for End user -->
    </record>
</odoo>